{
  "name": "commentify",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install-all": "npm-run-all install-backend install-frontend",
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm start --prefix frontend\"",
    "start-backend": "npm run dev --prefix backend",
    "start-frontend": "npm start --prefix frontend"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "npm-run-all": "^4.1.5"
  }
}
